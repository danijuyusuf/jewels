<div class="pen-title">
  <h2>Create Moderator</h2><span>
</div>
<!-- Form Module-->
<div class="module form-module">
  <div class="">
    <div class="tooltip">Click Me</div>
  </div>
  <div class="form">
    <h2>Create an account</h2>
    <%= form_for @moderator do |f| %>
      <%= f.text_field :firstname, placeholder: :firstname %>
      <%= f.text_field :lastname, placeholder: :lastname %>
      <%= f.email_field :email, placeholder: :email %>
      <%= f.password_field :password, placeholder: :password %>
      <%= f.password_field :password_confirmation, placeholder: :confirmation %>
      <%= f.check_box :super, value: true %>
      <button>Create</button>
    <% end %>
  </div>
</div>
